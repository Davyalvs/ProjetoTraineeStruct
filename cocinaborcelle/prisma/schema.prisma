// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Restaurante {
  id          Int           @id @default(autoincrement())
  nome        String
  descricao   String
  telefone    String?
  cardapio    Cardapio?
  rede_social RedeSocial?
  localizacao Localizacao[]
}

model Cardapio {
  id            Int         @id @default(autoincrement())
  categorias    Categoria[]
  restaurante   Restaurante @relation(fields: [restauranteId], references: [id])
  restauranteId Int         @unique
}

model Categoria {
  id         Int      @id @default(autoincrement())
  nome       String   @unique
  cardapio   Cardapio @relation(fields: [cardapioId], references: [id])
  cardapioId Int
  comidas    Comida[]
}

model Comida {
  id          Int       @id @default(autoincrement())
  nome        String    @unique
  preco_cents Int
  descricao   String
  compras     Compra[]
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int
}

model Carrinho {
  id          Int      @id @default(autoincrement())
  valor_cents Int
  compras     Compra[]
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String   @unique
}

model Compra {
  id         Int      @id @default(autoincrement())
  quantidade Int
  carrinho   Carrinho @relation(fields: [carrinhoId], references: [id])
  carrinhoId Int
  comida     Comida   @relation(fields: [comidaId], references: [id])
  comidaId   Int
}

model RedeSocial {
  id            Int         @id @default(autoincrement())
  instagram     String?
  facebook      String?
  restaurante   Restaurante @relation(fields: [restauranteId], references: [id])
  restauranteId Int         @unique
}

model Localizacao {
  id            Int         @id @default(autoincrement())
  maps          String?
  rua           String
  cidade        String
  Restaurante   Restaurante @relation(fields: [restauranteId], references: [id])
  restauranteId Int         @unique
}

model Usuario {
  id           String    @id @unique
  email        String    @unique
  nome         String    @unique
  carrinho     Carrinho?
  auth_session Session[]
  key          Key[]
}

model Session {
  id             String  @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           Usuario @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            Usuario @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}
